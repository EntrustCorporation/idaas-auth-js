{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": ["dist"]
  },
  "formatter": {
    "indentWidth": 2,
    "indentStyle": "space",
    "lineWidth": 120
  },
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "useNamingConvention": "off"
      },
      "performance": {
        "noBarrelFile": "off"
      },
      "all": true,
      "correctness": {
        "useExhaustiveDependencies": "off"
      }
    }
  }
}
